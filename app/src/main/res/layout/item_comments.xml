<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="@dimen/padding_normal"
    android:clipToPadding="false"
    android:foreground="?android:selectableItemBackground"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="16dp">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/comment_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:src="@drawable/default_avatar"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:text="3 hours ago"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/comment_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/comment_avatar"
        android:layout_toStartOf="@id/comment_time"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:lines="1"
        android:ellipsize="end"
        tools:text="Nick B"
        android:layout_toRightOf="@id/comment_avatar"
        android:layout_toLeftOf="@id/comment_time"
        android:layout_marginRight="@dimen/spacing_normal" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/comment_avatar"
        android:layout_below="@id/comment_userName"
        android:layout_alignParentEnd="true"
        tools:text="Blah blah blah blah blah blah blah blah blah blah blah blah blah"
        android:layout_toRightOf="@id/comment_avatar"
        android:layout_alignParentRight="true" />

</RelativeLayout>
